@model IEnumerable<MvcDemoApplication.web.Models.CategoryViewModel>

@if(Model.Count()>0)
{
   <table style="border-collapse:collapse;" width="25%" border="1">
    <tr>
        <th>Category</th>
        <th colspan="2">Action</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td><a href="/Category/index/@item.CategoryID">Edit</a></td>
            <td><a href="/Category/delete/@item.CategoryID" onclick="return delete_confirm();">Delete</a></td>
        </tr>
    }
</table> 
}

<script type="text/javascript">
    function delete_confirm() {
        if (confirm("Are you sure to delete this record?")) 
            return true;
        else 
            return false;
    }
</script>


